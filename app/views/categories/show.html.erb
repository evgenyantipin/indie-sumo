<div class="category">
  <h1 class="category__title"><%= @category.title %></h1>
  <div class="row">
    <div class="offset-md-2 col-md-8">
      <p class="category__description"><%= @category.description %></p>
    </div>
  </div>
</div>

<%= render 'navigational_links' %>

<div class="row my-5">
  <% @category.items.each do |item| %>
    <div class="col-xl-4 col-md-6 col-sm-12 justify-content-center">
      <%= link_to item, id: item.id, class: 'item-summary' do %>
        <div class="item-summary__body">
          <%= image_tag 'test-photo.png', alt: "#{item.title} Icon", class: 'item-summary__icon' %>

          <h3 class="item-summary__title"><%= truncate(item.title, length: 20) %></h3>
          <%= truncate(item.description, length: 60, separator: ' ') %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<%= render 'navigational_links' %>
