<%= render 'shared/page_title', title: 'Add Information' %>

<div class="row">
  <div class="offset-lg-3 col-lg-6 px-5 text-center mt-5">
    <%= bootstrap_form_for [@resource, @information_recommendation], html: { novalidate: 'novalidate' } do |f| %>
      <div class="form-group">
        <%= f.text_field :recommender_name,
                         placeholder: 'Your name (optional)',
                         class:       'form-control',
                         hide_label:  true %>
      </div>
      <div class="form-group">
        <%= f.email_field :recommender_email,
                          placeholder: 'Your e-mail (optional)',
                          class:       'form-control',
                          hide_label:  true %>
      </div>
      <div class="my-1">&nbsp;</div>
      <div class="form-group">
        <%= f.text_area :information,
                        placeholder: 'Information you would like to add',
                        rows:        5,
                        class:       'form-control',
                        hide_label:  true %>
      </div>
      <div class="form-group">
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
        <% if params[:category_id] %>
          <%= link_to 'Cancel', resource_path(params[:resource_id]), class: 'btn btn-link' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
