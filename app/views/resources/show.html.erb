<%= render 'shared/page_title', title: @resource.title %>

<%= render 'links' %>

<%= render 'shared/page_description', description: @resource.description %>

<% @resource.lists.each do |list| %>
  <div class="list">
    <h3 class="list__title"><%= list.title %></h3>
    <div class="row">
      <% list.external_resources.each do |external_resource| %>
        <div class="col-xl-4 col-md-6 col-sm-12 justify-content-center">
          <%= link_to_block_if external_resource.url.present?,
                               external_resource.url,
                               success_class: 'resource-summary',
                               fail_class:    'resource-summary is-not-link' do %>
            <div class="resource-summary__body">
              <%= image_tag 'test-photo.png', alt: "#{external_resource.title} Icon", class: 'resource-summary__icon' %>

              <h3 class="resource-summary__title">
                <%= truncate(external_resource.title, length: RESOURCE_SUMMARY_MAX_TITLE_LENGTH) %>
              </h3>
              <%= truncate(external_resource.description, length: RESOURCE_SUMMARY_MAX_DESCRIPTION_LENGTH, separator: ' ') %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

