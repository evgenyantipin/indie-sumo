<ul class="resource-links">
  <% if @resource.website.present? %>
    <li class="resource-links__link">
      <%= link_to @resource.website do %>
        <i class="resource-links__icon fas fa-user-circle"></i>Website
      <% end %>
    </li>
  <% end %>
  <% if @resource.twitter.present? %>
    <li class="resource-links__link">
      <%= link_to @resource.twitter do %>
        <i class="resource-links__icon fab fa-twitter"></i>Twitter
      <% end %>
    </li>
  <% end %>
  <% if @resource.facebook.present? %>
    <li class="resource-links__link">
      <%= link_to @resource.facebook do %>
        <i class="resource-links__icon fab fa-facebook"></i>Facebook
      <% end %>
    </li>
  <% end %>
  <% if @resource.github.present? %>
    <li class="resource-links__link">
      <%= link_to @resource.github do %>
        <i class="resource-links__icon fab fa-github"></i>GitHub
      <% end %>
    </li>
  <% end %>
  <% if @resource.youtube.present? %>
    <li class="resource-links__link">
      <%= link_to @resource.youtube do %>
        <i class="resource-links__icon fab fa-youtube"></i>YouTube
      <% end %>
    </li>
  <% end %>
</ul>