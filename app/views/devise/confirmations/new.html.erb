<div class="container-flex-column">
  <%= render 'shared/page_title', content: 'Resend Confirmation Instructions' %>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'form' }) do |f| %>
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      placeholder: 'E-mail',
                      class: 'form-field text-field',
                      value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>

    <%= f.submit "Resend Confirmation Instructions", class: 'form-field button button-primary' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>