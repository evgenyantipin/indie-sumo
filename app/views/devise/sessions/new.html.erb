<div class="container-flex-column">
  <%= render 'shared/page_title', content: 'Sign In' %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email,
                      autofocus:    true,
                      autocomplete: "email",
                      placeholder:  'E-mail',
                      class:        'form-field text-field' %>

    <%= f.label :password, class: 'sr-only' %>
    <%= f.password_field :password,
                         autocomplete: "current-password",
                         placeholder:  'Password',
                         class:        'form-field text-field' %>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox-group">
        <%= f.check_box :remember_me, class: 'form-field checkbox' %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Sign In", class: 'form-field button button-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>