<div class="container-flex-column">
  <%= render 'shared/page_title', content: 'Forgot Your Password?' %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form' }) do |f| %>
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      placeholder:  'E-mail',
                      class:        'form-field text-field' %>
    <%= field_error(resource, :email) %>

    <%= f.submit "Send Me Reset Instructions", class: 'form-field button button-primary' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>